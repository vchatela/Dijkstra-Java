<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dijkstra-java" default="compile.module.dijkstra-java">
  <dirname property="module.dijkstra-java.basedir" file="${ant.file.module_dijkstra-java}"/>
  
  <property name="module.jdk.home.dijkstra-java" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dijkstra-java" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dijkstra-java" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dijkstra-java" value="-encoding windows-1252 -source 8 ${compiler.args}"/>
  
  <property name="dijkstra-java.output.dir" value="${module.dijkstra-java.basedir}/out/production/Dijkstra-Java"/>
  <property name="dijkstra-java.testoutput.dir" value="${module.dijkstra-java.basedir}/out/test/Dijkstra-Java"/>
  
  <path id="dijkstra-java.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dijkstra-java.module.production.classpath">
    <path refid="${module.jdk.classpath.dijkstra-java}"/>
  </path>
  
  <path id="dijkstra-java.runtime.production.module.classpath">
    <pathelement location="${dijkstra-java.output.dir}"/>
  </path>
  
  <path id="dijkstra-java.module.classpath">
    <path refid="${module.jdk.classpath.dijkstra-java}"/>
    <pathelement location="${dijkstra-java.output.dir}"/>
  </path>
  
  <path id="dijkstra-java.runtime.module.classpath">
    <pathelement location="${dijkstra-java.testoutput.dir}"/>
    <pathelement location="${dijkstra-java.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.dijkstra-java">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dijkstra-java">
    <patternset refid="excluded.from.module.dijkstra-java"/>
  </patternset>
  
  <path id="dijkstra-java.module.sourcepath">
    <dirset dir="${module.dijkstra-java.basedir}/../../GitHub">
      <include name="Dijkstra-Java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dijkstra-java" depends="compile.module.dijkstra-java.production,compile.module.dijkstra-java.tests" description="Compile module Dijkstra-Java"/>
  
  <target name="compile.module.dijkstra-java.production" depends="register.custom.compilers" description="Compile module Dijkstra-Java; production classes">
    <mkdir dir="${dijkstra-java.output.dir}"/>
    <javac2 destdir="${dijkstra-java.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dijkstra-java}/javac">
      <compilerarg line="${compiler.args.dijkstra-java}"/>
      <bootclasspath refid="dijkstra-java.module.bootclasspath"/>
      <classpath refid="dijkstra-java.module.production.classpath"/>
      <src refid="dijkstra-java.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dijkstra-java"/>
    </javac2>
    
    <copy todir="${dijkstra-java.output.dir}">
      <fileset dir="${module.dijkstra-java.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dijkstra-java.tests" depends="register.custom.compilers,compile.module.dijkstra-java.production" description="compile module Dijkstra-Java; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dijkstra-java" description="cleanup module">
    <delete dir="${dijkstra-java.output.dir}"/>
    <delete dir="${dijkstra-java.testoutput.dir}"/>
  </target>
</project>